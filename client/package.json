{
  "name": "client-example",
  "version": "1.0.0",
  "description": "an example client for the blockchain-api",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "api:generate": "npm install @openapitools/openapi-generator-cli && openapi-generator generate -g typescript-node -i ../api/openapi.yaml -o ./build/openapi --additional-properties supportsES6=true,npmName=blockchain-adapter-api",
    "api:build": "cd build/openapi && npm install && npm run build",
    "start": "node index",
    "build": "npm run api:generate && npm run api:build",
    "clean": "rm -rf node_modules && rm -rf build",
    "lint": "eslint ."
  },
  "author": "Sebastian Meyer zu Borgsen",
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^1.0.18-5.0.0-beta2",
    "atob": "^2.1.2",
    "blockchain-adapter-api": "file:./build/openapi",
    "btoa": "^1.2.1",
    "lodash": "4.17.20",
    "openssl-nodejs": "^1.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.9.0",
    "eslint-config-google": "^0.14.0",
    "typescript": "^3.7.0-beta"
  }
}
